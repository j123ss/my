<% if !current_user.proPackagePurchased %>
  <p>
    You have not purchased the ProPack yet.  In order to upload files to your Zap cards
    please purchase the ProPack via Zap on your smart phone and then log back in here.
  </p>
<% end %>
<h2>Your Zap Cards</h2>
<ul class="zap_cards">
  <% @zap_cards.each do |card| %>
    <li><b><%= card.cardName %></b></li>
    <% if current_user.proPackagePurchased %>
      <ul class="more_info">
        <% card.more_infos.each do |mi| %>
          <li>
            <%= render :partial => "more_info", :locals => {:card => card, :mi => mi} %>
          </li>
        <% end %>
      </ul>
      <% if card.more_infos.size < 4 %>
        <%= form_for card, :url => add_more_info_zap_card_path(card), :method => :post, :multipart => true do |f| %>
          <label>More Info file:</label><%= f.file_field :more_info_file %>
          <br/>
          <label>File description (optional)</label><%= f.text_field :file_title %>
          <br/>
          <%= submit_tag "Upload" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</ul>
